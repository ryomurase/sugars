<div class="form row">
  <div class="col s12 m12 l12">
    <div class="card">
      <div class="card-image">
      <%= image_tag @product.avatar, class: "avatar" %><br>
      </div>
    <span class="card-title">　<%= @product.name %></span>

    <div class="card-content">
    <p>会社名： <%= @product.company %></p>
    <p>商品説明： <%= @product.detail %></p>
    <p>原材料： <%= @product.material %></p>
    <p>保管方法： <%= @product.preservation %></p>
    <p>容量： <%= @product.quantity %></p>
    <p>カテゴリー： <%= @product.category.name %></p>
    </div>
    <div class="card-action center">
    <%= link_to "詳細", product_path(@product.id), method: :get %>

<% if user_signed_in? && current_user.id == @product.user_id %>

    <%= link_to '編集', edit_product_path(@product.id), method: :get %>
    <%= link_to "削除", product_path(@product.id), method: :delete %>

<% end %>

    </div>
  </div>
  <div class="row">
    <div class="col s12 m12 l12">
    <!-- ここからフォーム -->
    <% if current_user %>
      <%= form_for [@product,@comment] do  |f| %>
        <%= f.text_area :text %>

        <div class="form-group center">
          <%= f.submit "投稿", class: "btn btn-primary withripple" %>
        </div>

        <% end %>

      <div class="comments">
      <h4 class="center">＜コメント一覧＞</h4>
      <% if @comments %>
      <% @comments.each do |comment| %>
        <p><%= comment.text %></p>
      <% end %>
    <% end %>
    <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
