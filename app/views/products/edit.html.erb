<div class="row form">

  <div class="col-lg-12">


    <%= form_for @product do |f| %>
      <h2 class="center">編集</h2>

      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :name, value: @product.name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :company, value: @product.company, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :material, value: @product.material, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :quantity, value: @product.quantity, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :preservation, value: @product.preservation, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
      <div class="col-lg-6">
        <%= f.collection_select :category_id, @categories, :id, :name, selected: 1, class: "browser-default" %>
      </div>

          <div class="field">
          <%= f.file_field :avatar %>
          </div>

      <div class="form-group center">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>





  </div>
</div>
